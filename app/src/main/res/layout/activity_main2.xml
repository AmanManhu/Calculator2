<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#28323B"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/Image_blueFON"
        android:layout_marginTop="56dp"
        android:layout_width="344dp"
        android:layout_height="208dp"
        android:background="@drawable/ic_radius"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_Caterory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="72dp"
        android:padding="0dp"
        android:text="Category"
        android:backgroundTint="#2F80ED"
        android:layout_width="88dp"
        android:textSize="12sp"
        android:layout_height="24dp"/>
    <TextView
        android:id="@+id/TextViewFigma"
        android:layout_width="311dp"
        android:layout_height="48dp"
        android:textColor="#28323B"
        android:textStyle="bold"
        android:text="Explore rhe nightlife of your city"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/btn_Caterory"
        app:layout_constraintEnd_toEndOf="@id/btn_Caterory"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/btn_Caterory"/>

    <ImageView
        android:id="@+id/iv_Heart_Icon"
        app:layout_constraintTop_toTopOf="@id/btn_Caterory"
        android:layout_marginStart="88dp"
        android:src="@drawable/heart"
        app:layout_constraintStart_toEndOf="@id/btn_Caterory"
        app:layout_constraintBottom_toBottomOf="@id/btn_Caterory"
        android:layout_width="24dp"
        android:layout_height="24dp"/>
    <ImageView
        app:layout_constraintTop_toBottomOf="@id/TextViewFigma"
        app:layout_constraintStart_toStartOf="@id/TextViewFigma"
        app:layout_constraintEnd_toEndOf="@id/TextViewFigma"
        android:src="@drawable/options"
        android:layout_width="296dp"
        android:layout_marginTop="36dp"
        android:layout_height="36dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_button"
        app:layout_constraintTop_toBottomOf="@id/Image_blueFON"
        app:layout_constraintStart_toStartOf="@id/Image_blueFON"
        app:layout_constraintEnd_toEndOf="@id/Image_blueFON"
        android:layout_marginTop="25dp"
        android:text="Next"
        android:textSize="16sp"
        app:backgroundTint="@null"
        android:background="@drawable/ic_shape_btn_next"
        android:layout_width="343dp"
        android:layout_height="47dp"/>
    <com.google.android.material.slider.RangeSlider
        android:id="@+id/range_slider"
        android:layout_width="200dp"
        android:layout_height="5.6dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="@id/dropdownBG"
        app:layout_constraintStart_toEndOf="@id/dropdownBG"
        app:thumbColor="#693BFD"
        app:thumbHeight="14dp"
        app:thumbWidth="14dp"
        app:trackColorActive="#2D4EF5"
        app:trackColorInactive="@color/white"
        app:trackHeight="5.6dp"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        app:values="@array/default_values" />
    <com.google.android.material.slider.RangeSlider
        android:id="@+id/range_slider2"
        android:layout_width="200dp"
        android:layout_height="5.6dp"
        android:layout_marginTop="145dp"
        app:layout_constraintTop_toBottomOf="@id/next_button"
        app:layout_constraintStart_toEndOf="@id/dropdownBG"
        app:thumbColor="#693BFD"
        app:thumbHeight="14dp"
        app:thumbWidth="14dp"
        app:trackColorActive="#2D4EF5"
        app:trackColorInactive="@color/white"
        app:trackHeight="5.6dp"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        app:values="@array/default_values" />
    <TextView
        android:text="Price"
        app:layout_constraintTop_toBottomOf="@id/next_button"
        android:textColor="#E5E5E5"
        app:layout_constraintStart_toStartOf="@id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="168dp"
        />
    <TextView
        android:text="Category"
        app:layout_constraintTop_toBottomOf="@id/next_button"
        android:textColor="#E5E5E5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/next_button"
        />
    <TextView
        android:text="Accessibility"
        app:layout_constraintTop_toBottomOf="@id/next_button"
        android:layout_marginStart="168dp"
        android:textColor="#E5E5E5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toStartOf="@id/next_button"
        />


    <FrameLayout
        android:id="@+id/dropdownBG"
       android:layout_marginBottom="212dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:background="@drawable/bg_dropdown"
        app:layout_constraintStart_toStartOf="@id/next_button"
        app:layout_constraintTop_toBottomOf="@id/next_button">
        <Spinner
            android:id="@+id/dropdown"
            android:layout_width="158dp"
            android:layout_height="41dp"
            android:foregroundTint="@color/black"
            android:paddingHorizontal="16dp"
            tools:ignore="TouchTargetSizeCheck" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
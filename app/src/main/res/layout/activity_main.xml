<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:id="@+id/main"
        android:background="#1C1C1C"
        tools:context=".MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearLyout">

        <HorizontalScrollView
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_display"
                android:scrollbars="vertical"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="70sp"
                android:padding="32dp"
                app:layout_constraintBottom_toTopOf="@id/linearLyout"
                app:layout_constraintStart_toEndOf="@id/linearLyout"
                android:textColor="@color/white"
                android:text="0"/>

        </HorizontalScrollView>
    </FrameLayout>




    <LinearLayout
        android:id="@+id/linearLyout"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.button.MaterialButton
                style="@style/btn_Calculator_grey"
                android:text="AC"
                android:id="@+id/btn_ac"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_7"
                style="@style/Btn_Calculator_black"
                android:text="7"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_4"
                style="@style/Btn_Calculator_black"
                android:text="4"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/Btn_Calculator_black"
                android:text="1"
                android:id="@+id/btn_1"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_0"
                style="@style/Btn_Calculator_black"
                android:text="0"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.button.MaterialButton
                style="@style/btn_Calculator_grey"
                android:text="+/-"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_8"
                style="@style/Btn_Calculator_black"
                android:text="8"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_5"
                style="@style/Btn_Calculator_black"
                android:text="5"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_2"
                style="@style/Btn_Calculator_black"
                android:text="2"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.button.MaterialButton
                style="@style/btn_Calculator_grey"
                android:text="%"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_9"
                style="@style/Btn_Calculator_black"
                android:text="9"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_6"
                style="@style/Btn_Calculator_black"
                android:text="6"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_3"
                style="@style/Btn_Calculator_black"
                android:text="3"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/Btn_Calculator_black"
                android:text="."
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delenie"
                style="@style/btn_Calculator_orange"
                android:text="/"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_X"
                style="@style/btn_Calculator_orange"
                android:text="X"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_minnus"
                style="@style/btn_Calculator_orange"
                android:text="-"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_plus"
                style="@style/btn_Calculator_orange"
                android:text="+"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_equal"
                style="@style/btn_Calculator_orange"
                android:text="="
                />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>